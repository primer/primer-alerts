{
  "version": "0.2.0",
  "name": "primer-alerts",
  "description": "Flash messages, or alerts, inform users of successful or pending actions.",
  "homepage": "http://primercss.io/",
  "author": "GitHub, Inc.",
  "license": "MIT",
  "style": "index.scss",
  "files": [
    "index.scss",
    "lib"
  ],
  "repository": "https://github.com/primer/alerts.git",
  "bugs": {
    "url": "https://github.com/primer/alerts/issues"
  },
  "scripts": {
    "build": "npm run setup && npm run preprocess",
    "lint": "scss-lint **/*.scss",
    "preprocess": "node-sass index.scss --include-path node_modules | postcss -c .postcss.json -o build/build.css",
    "setup": "npm install",
    "test": "npm run lint"
  },
  "dependencies": {
    "primer-support": "*"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "node-sass": "^3.7.0",
    "postcss-cli": "^2.5.2"
  },
  "keywords": [
    "alerts",
    "callouts",
    "css",
    "flash",
    "github",
    "primer",
    "primercss",
    "style"
  ]
}
